<?xml version="1.0" encoding="utf-8"?>
<!--A layout used as item in GridView in fragment_daily_weather.xml-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- An icon-->
    <ImageView
        android:id="@+id/iv_daily_weather_details_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:orientation="vertical">
        <!-- TextView on top-->
        <TextView
            android:id="@+id/tv_daily_weather_details_item_top_text"
            style="@style/common_text_view"
            android:singleLine="true"
            android:textSize="16sp" />

        <!-- TextView on bottom-->
        <TextView
            android:id="@+id/tv_daily_weather_details_item_bottom_text"
            style="@style/common_text_view"
            android:singleLine="true"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>