<?xml version="1.0" encoding="utf-8"?>
<!--Layout of the "CityWeatherFragment" class-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#00000000">

    <ProgressBar
        android:id="@+id/pb_fragment_city_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>
    <!-- search button-->
    <RelativeLayout
        android:id="@+id/rl_fragment_city_weather_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@color/hui_se">
        <TextView
            android:id="@+id/tv_fragment_city_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_translucent"
            android:text="@string/search_more_about_weather"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_toLeftOf="@id/tv_fragment_city_weather"
            android:layout_toStartOf="@id/tv_fragment_city_weather"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>


    <!-- air quality index-->
    <TextView
        android:id="@+id/tv_fragment_city_weather_air_quality_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_margin="8dp"
        android:textSize="16sp"/>

    <!-- use to account position,no thing to show in it-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible"/>

    <!--short-term weather forecast at the lower left corner-->
    <include
        android:id="@+id/view_fragment_city_weather_short_term_forecast"
        layout="@layout/layout_short_term_forecasting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>

    <!-- bottom layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- the view to show today's weather information-->
        <include
            android:id="@+id/view_fragment_city_weather_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/layout_weather_info"/>
        <!-- dividing line-->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white_translucent"/>
        <!-- The view to show tomorrow's weather information-->
        <include
            android:id="@+id/view_fragment_city_weather_tomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            layout="@layout/layout_weather_info"/>
    </LinearLayout>
</LinearLayout>