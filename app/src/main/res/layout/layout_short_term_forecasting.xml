<?xml version="1.0" encoding="utf-8"?>
<!--The short-term forecasting module in the "fragment_city_weather" layout-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!-- weather type,such as sunny or other-->
    <TextView
        android:id="@+id/tv_short_term_forecasting_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="天气类别"/>
    <!--The short-term button-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_short_term_forecasting_weather_type"
        android:layout_toEndOf="@id/tv_short_term_forecasting_weather_type"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:text="@string/short_term_forecast"/>

    <!-- temperature-->
    <TextView
        android:id="@+id/tv_fragment_city_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_short_term_forecasting_weather_type"
        android:textSize="80sp"/>
</RelativeLayout>