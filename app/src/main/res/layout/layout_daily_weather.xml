<?xml version="1.0" encoding="utf-8"?>
<!--the layout of the custom view "DailyWeather"-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <!--which day?today or tomorrow or other-->
    <TextView
        android:id="@+id/tv_layout_daily_weather_which_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white" />

    <!--the max temperature and the min temperature-->
    <TextView
        android:id="@+id/tv_layout_daily_weather_max_and_min_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <!--weather type,such as sunny or cloudy-->
    <TextView
        android:id="@+id/tv_layout_daily_weather_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@id/tv_layout_daily_weather_which_day"
        android:layout_marginTop="8dp"/>

    <!--the icon that was used to represent the weather type-->
    <ImageView
        android:id="@+id/iv_layout_daily_weather_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_layout_daily_weather_max_and_min_temperature"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</merge>