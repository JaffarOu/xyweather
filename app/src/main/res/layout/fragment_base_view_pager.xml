<?xml version="1.0" encoding="utf-8"?>
<!--layout of "BaseViewPagerFragment" class-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jf.xyweather.customview.CustomTitles
        android:id="@+id/custom_titles_fragment_base_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.jf.xyweather.customview.CustomTitles>
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circle_page_indicator_fragment_base_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_base_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>