<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 当前界面"Fragment"容器-->
    <FrameLayout
        android:id="@+id/fl_activity_main_fragment_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <!-- 下面按钮-->
    <RadioGroup
        android:id="@+id/rg_activity_base_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c0000000"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_activity_main_weather"
            style="@style/activity_main_radio_button"
            android:text="@string/weather"
            android:drawableTop="@drawable/ic_activity_main_weather"/>
        <RadioButton
            android:id="@+id/rb_activity_main_live_action"
            style="@style/activity_main_radio_button"
            android:text="@string/live_action"
            android:drawableTop="@drawable/ic_activity_main_live_action"/>
        <RadioButton
            android:id="@+id/rb_activity_main_me"
            style="@style/activity_main_radio_button"
            android:text="@string/me"
            android:drawableTop="@drawable/ic_activity_main_me"/>
    </RadioGroup>
</LinearLayout>