<?xml version="1.0" encoding="utf-8"?>
<!--the layout of the custom view "RealTimeWeather"-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_custom_view_real_time_weather_weather_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <!-- weather type-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="@string/real_time_forecast"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </FrameLayout>
    <!--weather type-->
    <!--<TextView-->
        <!--android:id="@+id/tv_custom_view_real_time_weather_weather_type"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="22sp" />-->

    <!-- temperature-->
    <TextView
        android:id="@+id/tv_layout_real_time_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_translucent"
        android:textSize="96sp"/>

    <!--wind and humility or body feeling temperature and air pressure-->
    <RelativeLayout
        android:id="@+id/rl_layout_real_time_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--wind or body feeling temperature-->
        <TextView
            android:id="@+id/tv_layout_real_time_weather_wind_or_body_feeling_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <!--humility or air pressure-->
        <TextView
            android:id="@+id/tv_layout_real_time_weather_humility_or_air_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</merge>