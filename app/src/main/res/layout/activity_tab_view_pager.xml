<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:id="@+id/ll_activity_tab_view_pager_root_view"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".base.activity.TabViewPagerActivity">

    <!--title-->
    <com.jf.xyweather.customview.CustomTitles
        android:id="@+id/custom_titles_activity_tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
    </com.jf.xyweather.customview.CustomTitles>

    <!-- tab of the ViewPager-->
    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/tab_page_indicator_activity_b_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.viewpagerindicator.TabPageIndicator>

    <!-- ViewPager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_tab_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
