<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jf.xyweather">

    <!-- add the network access-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.jf.xyweather.base.MyApplications"
        android:allowBackup="true"
        android:icon="@drawable/ic_xyweather_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- main module__start-->
        <!-- main interface-->
        <activity android:name="com.jf.xyweather.main.MainActivity"/>

        <!-- welcome interface-->
        <activity android:name=".main.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- main module__end-->


        <activity android:name=".weatherpage.RealTimeWeatherActivity"/>

        <!-- select city_start-->
        <activity android:name=".selectedcity.SelectedCityActivity"/>
        <!-- select city_end-->
    </application>

</manifest>